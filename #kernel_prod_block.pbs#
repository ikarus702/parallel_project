#!/bin/bash
#PBS -N kernel_block16
#PBS -A ccsd
#PBS -l qos=std,nodes=4:ppn=4,walltime=02:00:00
#PBS -q batch
#PBS -W group_list=cades-ccsd

#PBS -M ikarus702@gmail.com
#PBS -m abe
#PBS -o kernel_block16.o
#PBS -e kernel_block16.e

cd ~/src/my_project/parallel_project
pwd
node_num=$(($PBS_NUM_NODES*$PBS_NUM_PPN))
echo "$node_num"
block_num=16
echo "$block_num"

## modules can vary on platforms
module load R
echo "loaded R"
module list

## prevent warning when fork is used with MPI
export OMPI_MCA_mpi_warn_on_fork=0
export OPENBLAS_NUM_THREADS=1

# An illustration of fine control of R scripts and cores on several nodes
orterun -np $node_num --map-by node Rscript Kernel_Prod_Block.r $node_num $block_num > ~/src/my_project/parallel_project/Kernel_Prod_Block.rout
 
exit; 

